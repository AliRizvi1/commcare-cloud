[program:captain-tailon]
directory={{ captain_src_dir }}/
command=tailon -f {{ captain_log_dir }}/rq.log -b 0.0.0.0:8080
user={{ cchq_user }}
autostart=true
autorestart=true
stdout_logfile={{ captain_log_dir }}/tailon.log
redirect_stderr=true
stderr_logfile={{ captain_log_dir }}/tailon.error.log
;stopsignal=QUIT
;stopwaitsecs=60
;killasgroup=true
;stopasgroup=false
