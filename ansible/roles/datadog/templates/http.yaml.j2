init_config:

instances:
  - name: {{ env_monitoring_id }}
    url: https://{{ SITE_HOST }}/serverup.txt
    disable_ssl_validation: false
    check_certificate_expiration: true
    days_warning: 28
    days_critical: 14
    timeout: 20
  - name: {{ env_monitoring_id }} Heartbeat
    url: https://{{ SITE_HOST }}/serverup.txt?only=heartbeat
