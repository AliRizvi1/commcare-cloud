<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "{{ tsung_dest_dir }}/tsung-1.0.dtd" [
	<!ENTITY sessions SYSTEM "{{ tsung_pg_session_dir }}/{{ item }}">
] >
<tsung loglevel="info">
	<clients>
		<client host="localhost" use_controller_vm="true"/>
	</clients>

	<servers>
		<server host="{{ groups['load_test_host'][0] }}" port="5432" type="tcp"></server>
	</servers>

	<load>
		<arrivalphase phase="1" duration="1" unit="minute">
			<users interarrival="2" unit="second"></users>
		</arrivalphase>

		<arrivalphase phase="2" duration="1" unit="minute">
			<users interarrival="1" unit="second"></users>
		</arrivalphase>
	</load>
	
	&sessions;
	
</tsung>
