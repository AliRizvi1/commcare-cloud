{% set salt = inventory_hostname|hash('sha1') -%}
{% set hash_info = lookup('pbkdf2_hmac', '{{ couchdb2.password }} hash_name=sha1 salt={{ salt }} iterations=10') -%}
[admins]
{{ couchdb2.username }} = -pbkdf2-{{ hash_info.hash }},{{ hash_info.salt }},10

[couchdb]
uuid = {{ inventory_hostname|to_uuid }}

[couch_httpd_auth]
secret = {{ ansible_product_uuid|hash('sha256') }}

