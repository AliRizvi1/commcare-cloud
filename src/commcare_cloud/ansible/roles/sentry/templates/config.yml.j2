###################
# System Settings #
###################

system.secret-key: '{{ sentry_system_secret_key }}'
redis.clusters:
  default:
    hosts:
      0:
        host: 127.0.0.1
        port: 6379

################
# File storage #
################

filestore.backend: 'filesystem'
filestore.options:
  location: '{{ sentry_home_dir }}/sentry-files'